@{
    ViewData["Title"] = "Agendamento";
}




<div class="titulo-agendamento">
    <h2>Insira os dados para efetuar o pedido de agendamento</h2>
    <div class="agendamento">

        <div class="esquerda">
            <h1>Nome Quarto</h1>
            <img src="~/imgs/hotel-cama.png" alt="">
        </div>

        <div class="center">
            <div class="dados dados-cliente">
                <h3> Dados do Cliente</h3>
                <p>CPF: </p>
                <input type="text" />
                <p>Nome Completo: </p>
                <input type="text" />
                <p>RG: </p>
                <input type="text" />
                <p>Celular: </p>
                <input type="text" />
            </div>



            <div class="dados dados-do-agendamento">
                <h3> Dados do Agendamento</h3>
                <p>Camas:</p>
                <p>Banheiros:</p>
                <p>Valor Diaria:</p>
                <p>Data de Entrada: </p>
                <input type="text" />
                <p>Data de Saida: </p>
                <input type="text" />
            </div>

            <div class="botao">
                <button>Enviar Pedido</button>
            </div>
        </div>

        <div class="direita">
            <img src="~/imgs/mapa.png" alt="">
        </div>

    </div>
</div>