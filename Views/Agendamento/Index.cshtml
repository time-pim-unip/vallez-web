                    temErros = true;
                }

                if (!nascimento.value) {
                    nascimento.style["border"] = '1px solid red';
                    temErros = true;
                }

                if (!telefone.value) {
                    telefone.style["border"] = '1px solid red';
                    temErros = true;
                }

